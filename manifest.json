{
    "manifest_version": 3,

    "name": "Hide Fixed Elements packed by Denis",
    "description": "Hide fixed elements on a page to open up more viewing space",
    "version": "1.2.1",

    "applications": {
        "gecko": {
            "id": "hidefixedelements@commonground.systems"
        }
    },

    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "action": {
        "default_icon": {
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },

    "background": {
        "service_worker": "background.js"
    },

    "permissions": [
        "activeTab",
        "scripting"
    ]
}
